---
import { useState } from 'react'
import { Share2, Copy, X, Twitter, Facebook, Linkedin, Link2, Instagram, Mail } from 'lucide-react'
import { toast } from 'sonner'
import { useMobile } from '@/hooks/use-mobile'
import { Button } from '@/components/ui/button'
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
  DialogDescription,
  DialogClose,
} from '@/components/ui/dialog'
import {
  Drawer,
  DrawerClose,
  DrawerContent,
  DrawerDescription,
  DrawerFooter,
  DrawerHeader,
  DrawerTitle,
} from '@/components/ui/drawer'

const userAgent = Astro.request.headers.get('user-agent') ?? ''
const isMobile = /Android|iPhone|iPad|iPod|Opera Mini|IEMobile|WPDesktop/i.test(userAgent)
const [isOpen, setIsOpen] = useState(false)
  const props = Astro.props
---

<script client:load>
  const [isOpen, setIsOpen] = useState(false)
  const props = Astro.props
  const title = props.title
  const description = props.description
  const shareUrl = props.url || window.location.href

  const handleNativeShare = async () => {
    if (navigator.share) {
      try {
        await navigator.share({
          title,
          text: description,
          url: shareUrl,
        })
        toast('Berhasil dibagikan', { duration: 2000 })
      } catch (error) {
        if (error.name !== 'AbortError') {
          setIsOpen(true)
        }
      }
    } else {
      setIsOpen(true)
    }
  }

  const handleCopyLink = () => {
    navigator.clipboard.writeText(shareUrl)
    toast('Berhasil menyalin tautan ke papan klip', { duration: 2000 })
    setIsOpen(false)
  }

  const handleSocialShare = (platform, shareUrl) => {
    window.open(shareUrl, `share-${platform}`, 'width=600,height=400')
    setIsOpen(false)
    toast(`Berhasil dibagikan ke ${platform}`, { duration: 2000 })
  }
</script>

<Button
  variant="ghost"
  size="icon"
  onClick={() => handleNativeShare()}
  aria-label="Share this article"
>
  <Share2 class="h-5 w-5" />
</Button>

{isMobile ? (
  <Drawer open={isOpen} onOpenChange={setIsOpen}>
    <DrawerContent class="rounded-t-xl bg-[#1e1f24] text-gray-200">
      <div class="mx-auto my-3 h-1.5 w-12 flex-shrink-0 rounded-full bg-gray-700" />
      <DrawerHeader>
        <DrawerTitle class="text-xl">Bagikan Postingan ini</DrawerTitle>
        <DrawerDescription class="text-gray-400">Pilih cara Anda ingin membagikan postingan ini</DrawerDescription>
      </DrawerHeader>
      <div class="px-4">
        <ShareOptions />
        <LinkCopySection />
      </div>
      <DrawerFooter class="pt-2 pb-6">
        <DrawerClose asChild>
          <Button variant="outline" class="w-full">Close</Button>
        </DrawerClose>
      </DrawerFooter>
    </DrawerContent>
  </Drawer>
) : (
  <Dialog open={isOpen} onOpenChange={setIsOpen}>
    <DialogContent class="border-gray-800 bg-[#1e1f24] text-gray-200 sm:max-w-md">
      <DialogHeader>
        <DialogTitle class="text-xl">Bagikan Postingan ini</DialogTitle>
        <DialogDescription class="text-gray-400">Pilih cara Anda ingin membagikan postingan ini</DialogDescription>
      </DialogHeader>
      <ShareOptions />
      <LinkCopySection />
      <DialogClose asChild>
        <Button variant="ghost" size="icon" class="absolute top-3 right-3">
          <X class="h-4 w-4" />
        </Button>
      </DialogClose>
    </DialogContent>
  </Dialog>
)
}

<!-- Tambahan Component -->
<script>
  const ShareOptions = () => (
    <div class="grid grid-cols-4 gap-4 py-4">
      <button onClick={() => handleSocialShare('Twitter', `https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(shareUrl)}`)} class="flex flex-col items-center gap-2 rounded-lg p-3 transition-colors hover:bg-gray-800">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-[#1DA1F2]">
          <Twitter class="h-6 w-6 text-white" />
        </div>
        <span class="text-sm">Twitter</span>
      </button>
      <button onClick={() => handleSocialShare('Facebook', `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`)} class="flex flex-col items-center gap-2 rounded-lg p-3 transition-colors hover:bg-gray-800">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-[#1877F2]">
          <Facebook class="h-6 w-6 text-white" />
        </div>
        <span class="text-sm">Facebook</span>
      </button>
      <button onClick={() => handleSocialShare('LinkedIn', `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(shareUrl)}`)} class="flex flex-col items-center gap-2 rounded-lg p-3 transition-colors hover:bg-gray-800">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-[#0A66C2]">
          <Linkedin class="h-6 w-6 text-white" />
        </div>
        <span class="text-sm">LinkedIn</span>
      </button>
      <button onClick={() => handleSocialShare('Email', `mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(`Check out this article: ${shareUrl}`)}`)} class="flex flex-col items-center gap-2 rounded-lg p-3 transition-colors hover:bg-gray-800">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gray-700">
          <Mail class="h-6 w-6 text-white" />
        </div>
        <span class="text-sm">Email</span>
      </button>
      <button onClick={() => handleCopyLink()} class="flex flex-col items-center gap-2 rounded-lg p-3 transition-colors hover:bg-gray-800">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gray-700">
          <Link2 class="h-6 w-6 text-white" />
        </div>
        <span class="text-sm">Copy Link</span>
      </button>
      <button onClick={() => handleSocialShare('Instagram', 'https://instagram.com')} class="flex flex-col items-center gap-2 rounded-lg p-3 transition-colors hover:bg-gray-800">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-tr from-purple-600 via-pink-600 to-orange-500">
          <Instagram class="h-6 w-6 text-white" />
        </div>
        <span class="text-sm">Instagram</span>
      </button>
    </div>
  )

  const LinkCopySection = () => (
    <div class="mt-2 flex items-center justify-between">
      <div class="mr-2 flex-1 truncate rounded-lg bg-gray-800 p-2 text-sm text-gray-400">{shareUrl}</div>
      <Button variant="outline" size="icon" onClick={() => handleCopyLink()} class="flex-shrink-0">
        <Copy class="h-4 w-4" />
      </Button>
    </div>
  )
</script>
